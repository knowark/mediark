[Unit]
Description={{ app_user }} Service

[Service]
EnvironmentFile=/etc/profile.d/{{ app_user }}.sh
User={{ app_user }}
Group={{ app_user }}
WorkingDirectory=/opt/{{ app_user }}/{{ app_user }}
ExecStart=/opt/{{ app_user }}/env/bin/python -u -m {{ app_user }} serve
Restart=on-failure
SyslogIdentifier={{ app_user }}

[Install]
WantedBy=multi-user.target
